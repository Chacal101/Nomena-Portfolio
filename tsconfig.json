{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": [
      "api/**/*.ts",
      "frontend/src/**/*"
    ]
  }
  